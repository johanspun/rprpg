<h1>Log In</h1>

<% form_tag session_path do -%>
	<%= label_tag 'login' %>
	<%= text_field_tag 'login', @login %>
	<%= label_tag 'password' %>
	<%= password_field_tag 'password', nil %>
	<% cbt = check_box_tag 'remember_me', '1', @remember_me -%>
	<%= label_tag 'remember_me', cbt + 'Remember me' %>
	<%= submit_tag 'Log in' %>
<% end -%>
